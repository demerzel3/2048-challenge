// Exponent
// From: https://github.com/Team-Sass/Sassy-math/blob/master/sass/math.scss#L36
exponent($base, $exponent)
    // reset value
    $value = $base
    // positive intergers get multiplied
    if $exponent > 1
        for $i in 2..$exponent
            $value = $value * $base
    // return the last value written
    $value

pow($base, $exponent)
    exponent($base, $exponent)

// Transition mixins
transition()
    -webkit-transition: arguments
    -moz-transition: arguments
    transition: arguments

transition-property()
    -webkit-transition-property: arguments
    -moz-transition-property: arguments
    transition-property: arguments

animation()
    -webkit-animation: arguments
    -moz-animation: arguments
    animation: arguments

animation-fill-mode()
    -webkit-animation-fill-mode: arguments
    -moz-animation-fill-mode: arguments
    animation-fill-mode: arguments

transform()
    -webkit-transform: arguments
    -moz-transform: arguments
    transform: arguments

// Keyframe animations
keyframes($animation-name)
    @-webkit-keyframes $animation-name
        block
    @-moz-keyframes $animation-name
        block
    @keyframes $animation-name
        block

// Media queries
smaller($width)
    @media screen and (max-width: $width)
        {block}

// Clearfix
clearfix()
    &:after
        content: ""
        display: block
        clear: both