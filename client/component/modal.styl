$easeOutExpo = cubic-bezier(0.19, 1, 0.22, 1)
$easeOutBack = cubic-bezier(0.175, 0.885, 0.32, 1.275)

$backColor = #776e65
$textColor = white

.modal {
    //border solid 1px black
    border-radius 5px
    background-color $backColor
    color $textColor
    text-align center
    width 460px
    height 500px
    position absolute
    transition top $easeOutExpo 0.75s
    top -250px
    margin-top -250px
    display none
    z-index 100
    box-sizing border-box

    &.modal-in {
        display block
    }
    &.modal-visible {
        top 50%
    }
}